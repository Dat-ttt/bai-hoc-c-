#include <iostream>
#include <algorithm>
#include <random>
#include <cstring>
#include <cmath>
using namespace std;

struct diachi
{
    char tenduong[30];
    char phuong[30];
    char tinhthanh[20];
};

struct nhanvien
{
    int ma;
    char ten[30];
    int tuoi;
    diachi quan;
    diachi nha;
}; 

struct diem
{
    double x;
    double y;
};

void nhap(diem &A)
{
    cout << "nhap toa do x: ";
    cin >> A.x;
    cout << "nhap toa do y: ";
    cin >> A.y;
}

double distance(diem A, diem B)
{
    double dis;
    dis = sqrt(pow(A.x - B.x, 2)  + pow(A.y - B.y, 2));
    return dis;
}

int main()
{
    //bt27
    nhanvien *pnv1 = new nhanvien;
    nhanvien *pnv2 = new nhanvien;

    *pnv1 = {1, "imhentai", 19, {"tran dai nghia", "bach mai", "ha noi"}, {"trung kinh", "yen hoa", "ha noi"}};
    *pnv2 = {2, "nhentai", 20, {"tran dai nghia", "bach mai", "ha noi"}, {"vinh ho", "dong da", "ha noi"}};

    //xuat info nv1
    cout << "info nv1:" << endl;
    cout << "ma nv: " << pnv1->ma << endl;
    cout << "ten nv: " << pnv1->ten << endl;
    cout << "tuoi nv: " << pnv1->tuoi << endl;
    cout << "dia chi nv lam: " << pnv1->quan.tenduong << " - " << pnv1->quan.phuong << " - " << pnv1->quan.tinhthanh << endl;
    cout << "dia chi nv o: " << pnv2->nha.tenduong << " - " << pnv2->nha.phuong << " - " << pnv2->nha.tinhthanh << endl;

    cout << endl;

    //xuat info nv2
    cout << "info nv2:" << endl;
    cout << "ma nv: " << pnv2->ma << endl;
    cout << "ten nv: " << pnv2->ten << endl;
    cout << "tuoi nv: " << pnv2->tuoi << endl;
    cout << "dia chi nv lam: " << pnv2->quan.tenduong << " - " << pnv2->quan.phuong << " - " << pnv2->quan.tinhthanh << endl;
    cout << "dia chi nv o: " << pnv2->nha.tenduong << " - " << pnv2->nha.phuong << " - " << pnv2->nha.tinhthanh << endl;


    //bt28
    diem A, B;
    cout << "nhap toa do diem A:" << endl;
    nhap(A);
    cout << "nhap toa do diem B: " << endl;
    nhap(B);
    cout << "Khoang cach 2 diem la: " << distance(A, B) << endl; 

    int n;
    cout << "nhap so diem: ";
    cin >> n;
    diem taphop[n];
    //duyet diem de nhap toa do
    for (int i = 0; i < n; i++){
        cout << "nhap toa do diem " << char(67 + i) << endl;
        nhap(taphop[i]);
    }

    //tinh tong cac distance
    double sum = 0;
    for (int i = 0; i < n; i++){
        for (int j = i + 1; j < n; j++){
            sum += distance(taphop[i], taphop[j]);
        }
    }
    cout << "tong cac khoang cach diem trong tap hop la: " << sum << endl;

    //bt29




}
